{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots":[
      "types"
    ],
    "types": ["node"]
  },
  "include": [
    "src/**/*", "src/types/**/*.d.ts"
  , "src/lib/.ts"  ]
}